			document.addEventListener('DOMContentLoaded', function () {
				const radioButtons = document.querySelectorAll('.address-radio');
				radioButtons.forEach(button => {
					button.addEventListener('change', function () {
						radioButtons.forEach(btn => {
							const label = btn.nextElementSibling;
							if (btn.checked) {
								label.querySelector('.seller-info').classList.add('selected-address');
							} else {
								label.querySelector('.seller-info').classList.remove('selected-address');
							}
						});
					});
				});
			});


			document.addEventListener('DOMContentLoaded', (event) => {
				const paymentMethods = document.querySelectorAll('.payment-method');

				paymentMethods.forEach(method => {
					method.addEventListener('click', () => {
						paymentMethods.forEach(item => item.classList.remove('active'));

						method.classList.add('active');
					});
				});
			});


			$(document).ready(function () {
				let selectedPaymentMethod = null;

				$('.payment-method').on('click', function () {
					$('.payment-method').removeClass('active');
					$(this).addClass('active');
					selectedPaymentMethod = $(this).data('method');
				});

				$('#button-addon2').on('click', function () {
					const couponCode = $('#c_code').val();

					$.ajax({
						url: '/applyCoupon',
						method: 'POST',
						data: { couponCode },
						success: function (response) {
							if (response.error) {
								$('#coupon-error').text(response.error).show();
							} else {
								$('#coupon-error').hide();
								$('#applied-coupon-code').text(response.couponCode);
								$('#discount-amount').text(`${response.discountAmount.toFixed(2)}`);
								const newTotal = response.grandTotal;
								$('#order-total').text(`${newTotal.toFixed(2)}`);
								$('#applied-coupon').show();
							}
						},
						error: function (xhr, status, error) {
							if (xhr.responseJSON && xhr.responseJSON.error) {
								$('#coupon-error').text(xhr.responseJSON.error).show();
							} else {
								$('#coupon-error').text('Failed to apply coupon').show();
							}
						}
					});
				});

				$('#remove-coupon').on('click', function () {
					$('#applied-coupon').hide();
					$('#c_code').val('');
					$('#discount-amount').text('0.00');

					const originalSubtotal = parseFloat($('#subtotal-value').text().replace('₹ ', ''));

					const newTotal = isNaN(originalSubtotal) ? 100 : originalSubtotal + 100;

					$('#order-total').text(`${newTotal.toFixed(2)}`);
					location.reload()
				});


				$('#place-order-button').on('click', function () {
					const selectedAddress = $('input[name="selected_address"]:checked').val();
					const couponCode = document.getElementById('c_code').value;

					if (!selectedPaymentMethod) {
						Swal.fire({
							icon: 'warning',
							title: 'Please select a payment method'
						});
						return;
					}

					if (!selectedAddress) {
						Swal.fire({
							icon: 'warning',
							title: 'Please select an address'
						});
						return;
					}

					$.ajax({
						url: '/placeOrder',
						method: 'POST',
						data: {
							addressId: selectedAddress,
							paymentMethod: selectedPaymentMethod,
							couponCode: couponCode
						},
						success: function (response) {
							if (response.razorpayOrderId) {
								const options = {
									"key": response.key_id,
									"amount": response.amount,
									"currency": "INR",
									"name": "MACHIVE",
									"description": "Test Transaction",
									"order_id": response.razorpayOrderId,
									"handler": function (response) {
										$.ajax({
											url: '/verifyPayment',
											method: 'POST',
											data: {
												orderId: response.razorpay_order_id,
												paymentId: response.razorpay_payment_id,
												signature: response.razorpay_signature
											},
											success: function (verificationResponse) {
												if (verificationResponse.success) {
													window.location.href = '/thankyou';
												} else {
													Swal.fire({
														icon: 'error',
														title: 'Payment verification failed',
														text: verificationResponse.message
													});
												}
											},
											error: function () {
												Swal.fire({
													icon: 'error',
													title: 'Error',
													text: 'Failed to verify payment. Please try again.'
												});
											}
										});
									},
									"prefill": {
										"name": response.customerName,
										"email": response.customerEmail,
										"contact": response.customerPhone
									},
									"notes": {
										"address": "note value"
									},
									"theme": {
										"color": "#3399cc"
									}
								};
								const rzp1 = new Razorpay(options);
								rzp1.on('payment.failed', function (response) {
									$.ajax({
										url: '/paymentFailed',
										method: 'POST',
										data: {
											orderId: options.order_id
										},
										success: function (failedResponse) {
											Swal.fire({
												icon: 'error',
												title: 'Payment Failed',
												text: 'Your payment could not be processed. Please try again.'
											});
										},
										error: function () {
											Swal.fire({
												icon: 'error',
												title: 'Error',
												text: 'Failed to update payment status. Please contact support.'
											});
										}
									});
								});
								rzp1.open();
							} else {
								Swal.fire({
									icon: 'success',
									title: 'Order Placed Successfully!',
									text: 'Your order has been placed successfully.',
									showConfirmButton: false,
									timer: 2000
								}).then(() => {
									window.location.href = '/thankyou';
								});
							}
						},
						error: function () {
							Swal.fire({
								icon: 'error',
								title: 'Error',
								text: 'Failed to place the order. Please try again.'
							});
						}
					});
				});

			});







