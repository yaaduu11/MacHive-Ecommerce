    document.getElementById("addProductForm").addEventListener('submit', function (event) {
      event.preventDefault();

      const name = this.elements['name'].value.trim();
      const description = this.elements['description'].value.trim();
      const brand = this.elements['brand'].value.trim();
      const imageInput = this.elements['image'];

      const nameError = document.getElementById('name-error');
      const descriptionError = document.getElementById('description-error');
      const brandError = document.getElementById('brand-error');
      const imageError = document.getElementById('image-error');

      // Clear previous error messages
      nameError.textContent = '';
      nameError.style.display = 'none';
      descriptionError.textContent = '';
      descriptionError.style.display = 'none';
      brandError.textContent = '';
      brandError.style.display = 'none';
      imageError.textContent = '';
      imageError.style.display = 'none';

      // Regular expression to allow only letters, numbers, and spaces
      const validRegex = /^[a-zA-Z0-9 ]*$/;

      let isValid = true;

      if (!validRegex.test(name) || name === "") {
        nameError.textContent = 'Product name can only contain letters, numbers, and spaces, and cannot be empty or whitespace only.';
        nameError.style.display = 'block';
        isValid = false;
      }

      if (!validRegex.test(description) || description === "") {
        descriptionError.textContent = 'Product description can only contain letters, numbers, and spaces, and cannot be empty or whitespace only.';
        descriptionError.style.display = 'block';
        isValid = false;
      }

      if (!validRegex.test(brand) || brand === "") {
        brandError.textContent = 'Brand can only contain letters, numbers, and spaces, and cannot be empty or whitespace only.';
        brandError.style.display = 'block';
        isValid = false;
      }

      if (imageInput.files.length === 0) {
        imageError.textContent = 'Please add an image.';
        imageError.style.display = 'block';
        isValid = false;
      }

      if (!isValid) {
        return;
      }

      const formData = new FormData();
      formData.append('name', name);
      formData.append('description', description);
      formData.append('categoryId', this.elements['categoryId'].value);
      formData.append('brand', brand);
      formData.append('tags', this.elements['tags'].value);

      Array.from(imageInput.files).forEach((file) => {
        formData.append('image', file);
      });

      fetch(`/admin/AddProducts`, {
        method: 'POST',
        body: formData
      })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            Swal.fire({
              title: 'Success!',
              text: data.message || 'Product has been added',
              icon: 'success'
            }).then((result) => {
              if (result.isConfirmed || result.isDismissed) {
                window.location.href = `/admin/AddVariants/${data.productId}`;
              }
            });
          } else {
            Swal.fire({
              title: 'Error!',
              text: data.message || 'Something went wrong',
              icon: 'error'
            });
          }
        })
        .catch(error => {
          console.error('Error:', error);
          Swal.fire({
            title: 'Error!',
            text: 'Failed to add product.',
            icon: 'error'
          });
        });
    });


  </script>


