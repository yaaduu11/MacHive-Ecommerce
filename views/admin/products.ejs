  <script>

    function navigateToEdit(productId) {
      window.location.href = `/admin/EditProducts/${productId}`;
    }

    function toggleBlockStatus(productId, btnElement, statusElement) {
    const isUnlisted = btnElement.innerText.trim() === 'Unlist';
         const confirmationMessage = isUnlisted
        ? 'Are you sure you want to Unlist this Product?'
        : 'Are you sure you want to List this Product?';

    Swal.fire({
        title: confirmationMessage,
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#3085d6",
        cancelButtonColor: "#d33",
        confirmButtonText: "Yes, Sure!"
    }).then((result) => {
        if (result) {
            fetch(`/admin/unlist-product/${productId}`, {
                method: 'PATCH',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            .then(response => response.json())
            .then((data) => {
              const isActive = btnElement.innerText.trim() === 'Unlist';
              btnElement.innerText = isActive ? 'List' : 'Unlist';
              btnElement.classList.toggle('btn-success', isActive);
              btnElement.classList.toggle('btn-danger', !isActive);

              statusElement.innerText = isActive ? 'Unlisted' : 'Listed';
              statusElement.classList.toggle('badge-success-soft', !isActive);
              statusElement.classList.toggle('badge-danger', isActive);
              statusElement.classList.toggle('text-success', !isActive);
              statusElement.classList.toggle('text-danger', isActive);

            })
            .catch((error) => {
                console.error('Error:', error);
                alert('Failed to update the product status.');
            });
        }
    })
