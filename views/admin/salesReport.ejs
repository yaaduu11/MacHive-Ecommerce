                                    </td>
                                    <td><a href="#!">
                                        <%= order._id %>
                                      </a></td>
                                    <td>
                                      <%= order.userId.name %>
                                    </td>
                                    <td>
                                      <%= order.orderDate.toLocaleDateString() %>
                                    </td>
                                    <td>
                                      <%= item.orderStatus %>
                                    </td>
                                    <!-- <td>
                                      <%= order.couponDetails ? 'Yes' : 'No' %>
                                    </td> -->
                                    <td class="text-dark">₹ <%= order.grandTotal.toFixed(2) %>
                                    </td>
                                  </tr>
                                  <% displayed=true; %>
                                    <% } %>
